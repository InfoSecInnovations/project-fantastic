.label
  font-size: 12px
  color: disabled_color

ul
  margin: 0
  padding: 0

li
  margin: 0
  padding: 0

.node
  cursor: pointer
  font-size: 12px
  box-sizing: border-box
  padding: 5px
  background-color: button_background_color
  border: solid 2px highlight_color
  user-select: none
  display: grid
  gap: 2px 0
  grid-template: 1fr 1fr / 1fr auto
  width: 80px
  height: 80px
  border-radius: 40px
  z-index: 10
  place-items: center
  .node-label
    grid-row: 1 / 3
    display: flex
    align-items: center
    text-align: center
  .node-button
    width: 20px
    height: 20px
    border-radius: 10px
    display: grid
    place-items: center
    font-size: 10px
    background-color: highlight_color
    cursor: pointer
    text-align: center
    padding: 2px
    box-sizing: border-box

.jtk-connector
  z-index: 5

.jtk-endpoint
  z-index: 6

.completed
  color: success_color

.locked
  cursor: auto
  background-color: disabled_background_color
  color: disabled_color

.highlight
  background-color: button_hover_color
  border-color: alt_background_color