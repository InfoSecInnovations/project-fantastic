@require '../common/base.styl'

#container
  display: grid
  grid-template: auto 1fr / @css{min(400px, 50%)} 1fr @css{min(500px, 50%)}
  height: 100%
  @require '../main_interface/top.styl'
  #graph_container
    grid-column: 1 / 4
    grid-row: 2
    min-height: 0
    .vis-network
      outline: none
  #inventory_viewer
    grid-column: 2 / 3
    grid-row: 2
    min-height: 0
    background-color: background_color
    z-index: 10
    position: relative
  #story_viewer
    grid-column: 1 / 4
    grid-row: 2
    min-height: 0
    background-color: background_color
    z-index: 10
    position: relative
    display: grid
    grid-template-columns: @css{min(400px, 40%)} 1fr
    place-items: stretch
    .progress
      font-size: h3_font_size
      color: highlight_color
      font-weight: bold
    #story_container_wrapper
      min-width: 0
      min-height: 0
      #story_container
        width: 1280px
        height: 720px
        position: relative
        transform-origin: top left
  .close
    position: absolute
    top: 1rem
    right: 1rem
    @require '../story'
    &.hidden
      display: none

  @require '../main_interface/review.styl'
  #loading
    display: grid
    place-items: center
    font-size: 5vw
  @require '../main_interface/left_panel.styl'
  @require '../main_interface/selection.styl'

#tooltip
.tooltip
  display: flex
  flex-direction: column
  background-color: button_background_color
  border: border_thickness solid black
  border-radius: border_radius
  padding: 1rem
  position: absolute
  z-index: 100
  transform: translate(-50%, 0)
  pointer-events: none

.tooltippable
  flex-grow: 0
  .tooltip
    display: none
  &:hover
    .tooltip
      display: flex
      width: max-content

.panel_title
  padding: 0 1rem

.success
  color: success_color

.failure
  color: failure_color

.pending
  color: pending_color

.hidden
  display: none

.scan_actions
  ul
    padding: 0
    li
      list-style: none
      padding: 0.5rem 0.5rem 0.5rem 1.5rem

.blur
  position: absolute
  width: 100%
  height: 100%
  background-color: rgba(background_color, 0.8)
  display: grid
  place-items: center
  z-index: 200

.dialog
  display: flex
  flex-direction: column
  background-color: panel_color
  padding: 1rem
  gap: 1rem