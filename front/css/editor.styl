@require 'common/base.styl'
@require 'story'

.label
  font-size: 12px
  color: disabled_color

ul
  margin: 0
  padding: 0

li
  margin: 0
  padding: 0

#main-container
  display: flex
  min-height: 100vh
  #modules
    display: flex
    flex-direction: column
    align-items: center
    padding: 10px
    gap: 10px
    flex: 1
    max-width: 300px
    .button
      width: 80%
      max-width: unset
    .module
      display: flex
      align-items: center
      align-self: stretch
      justify-content: space-between
      .module-button
        display: grid
        place-items: center
        font-size: 15px
        background-color: highlight_color
        width: 20px
        height: 20px
        flex: none
        cursor: pointer
  .content
    flex: 1
  #menu-bar
    display: flex
    justify-content: space-between
    gap: 10px
    padding: 10px
  #story-tree
    display: grid
    grid-template-columns: 1fr auto 1.4fr
    //width: fit-content
    .graph
      width: 1280px
      height: 720px
      position: relative
      border: solid 2px button_hover_color
      background-color: background_color
      box-sizing: content-box
    #module-menu
      z-index: 100
      display: flex
      padding: 10px
    #sidebar
      padding: 10px
      .sidebar-columns
        display: grid
        grid-template-columns: 1fr 1fr
        li
          margin: 10px
    #central-column
      display: flex
      flex-direction: column
      background-color: panel_color
    #info
      padding: 10px
      gap: 10px
      .parameter
        display: flex
        gap: 10px

