.scroll_container
  min-height: 0
  min-width: 0
  display: flex
  flex-direction: column
  gap: 1rem
  padding: 1rem
  .scroll
    background-color: inner_panel_color
    overflow-y: auto
    min-height: 0
    padding: 1rem
    display: flex
    flex-direction: column
    gap: 1rem
    scrollbars()
    pre
      overflow-x: auto
    &.spaced
      gap: 3.5rem
    .scroll_item
      display: flex
      flex-direction: column
      &.spaced
        gap: 0.7rem