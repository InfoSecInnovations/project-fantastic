@require('./parameters.styl')
@require('./functions.styl')

*
  box-sizing: border-box

body
  font-family: main_font
  color: font_color
  font-size: base_font_size
  background-color: background_color
  margin: 0
  padding: 0

.panel
  background-color: panel_color

.item
  display: flex
  flex-wrap: wrap
  align-items: center
  justify-content: space-between
  gap: 1rem
  &>*
    flex-grow: 1
    flex-basis: 0

.fas
  font-size: icon_size
  flex-grow: 0
  color: highlight_color

.fa-fw 
  display: grid
  place-items: center
  height: 1.25em

ul
  margin: 0

pre
  background-color: alt_background_color
  color: alt_font_color
  margin: 0
  padding: 0.5rem
  scrollbars()
  code
    padding: 0
    font-size: unset

code
  font-size: 1.2rem

.targets
  font-size: small_font_size

a, .link
  color: alt_background_color
  font-weight: 600
  cursor: pointer
  display: inline
  text-decoration: none
  &:hover
    color: highlight_color

.section
  display: flex
  flex-direction: column
  gap: 0.7rem
  overflow-y: auto
  scrollbars()

.connection_match
  display: flex
  flex-direction: column
  gap: 1rem
  padding: 1rem 0

@require('./headers.styl')
@require('./inputs.styl')
@require('./scroll_container.styl')

