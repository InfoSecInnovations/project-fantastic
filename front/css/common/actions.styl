.results
  min-width: 0
  .tooltip
    transform: translate(0, var(--actions-scroll-height, 0))
    right: 2rem
  .followup
    display: flex
    align-items: center
    gap: 0.5rem
    cursor: pointer
    &:hover
      .foldout
        color: alt_background_color
  .result
    min-width: 0
    padding: 1rem
    display: flex
    flex-direction: column
    gap: 0.7rem
    .button
      align-self: flex-start
    .result_time
      display: flex
      align-items: center
      gap: 0.5rem
      .time
        align-items: center
        display: flex