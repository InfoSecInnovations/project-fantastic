select
  dropdown()

.button, input[type=button], input[type=submit], input[type=reset]
  cursor: pointer
  padding: 0.8rem
  background-color: button_background_color
  color: button_font_color
  font-family: main_font
  font-size: base_font_size
  font-weight: normal
  flex: none
  display: flex
  align-items: center
  justify-content: center
  text-align: center
  max-width: max-content
  min-width: 5rem
  highlight_border()
  &:hover
    background-color: button_hover_color
    hover_border()
  &.disabled
    background-color: disabled_background_color
    color: disabled_color
    cursor: auto
    disabled_border()

input[type=text], input[type=password]
  alt_border()
  background-color: alt_background_color
  padding: 0.5rem
  flex: 1

.icon_button
  cursor: pointer
  padding: 0.5rem
  display: flex
  flex-direction: column
  align-items: center
  justify-content: stretch
  width: 3rem
  .label
    font-size: small_font_size
    display: flex
    align-items: center
    flex-grow: 1
  &:hover
    .fas
    .far
      color: alt_background_color

.foldout
  cursor: pointer
  &:hover
    color: alt_background_color
  &.disabled
    color: disabled_color
    cursor: auto

.play
  align-self: flex-start
  display: flex
  gap: 1rem
  align-items: center