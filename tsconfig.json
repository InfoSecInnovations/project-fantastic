{
  "include": [
    "main/**/*",
    "packages/**/*", "dev-test"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./build",
    "module": "commonjs"
  },
  "typedocOptions": {
    "includeDeclarations": true,
    "excludeExternals": true,
    "plugin": "typedoc-plugin-markdown",
    "excludeNotExported": true
  }
}